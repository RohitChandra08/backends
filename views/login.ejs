<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style2.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>

    <div class="card">
        <h2>Welcome to Drive</h2>
        <p>Sign in to access your files</p>
    </div>
    
    <form action="/api/user/admin/login" method="post">

        <div class="field">
            <label>Email</label>
            <i class="ri-user-line left-icon"></i>
            <input type="email" name="email" placeholder="Enter your Email" required>
        </div>

        <div class="field">
            <label>Password</label>

            <!-- LEFT LOCK ICON -->
            <i class="ri-lock-2-line left-icon"></i>

            <!-- PASSWORD INPUT -->
            <input
                type="password"
                name="password"
                id="password"
                placeholder="Enter your password"
                required
            >

            <!-- RIGHT EYE ICON -->
            <i
                class="ri-eye-off-line right-icon"
                id="togglePassword"
                onclick="togglePassword()"
            ></i>
        </div>

        <button><i class="ri-login-box-line"></i>Sign in</button>
    </form>

    <div class="footer">
        Don't have an account?<a href="/signup">Create one</a>
    </div>

    <script>
        function togglePassword() {
            const pwd = document.getElementById("password");
            const eye = document.getElementById("togglePassword");

            if (pwd.type === "password") {
                pwd.type = "text";
                eye.className = "ri-eye-line right-icon";
            } else {
                pwd.type = "password";
                eye.className = "ri-eye-off-line right-icon";
            }
        }
    </script>

</body>
</html>
